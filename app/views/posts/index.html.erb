<% content_for :page_title,  "Index" %>

<div class="container-fluid">
    <div class="container">
        <% @posts.each do |post| %>
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">
                  <%= link_to post.title, post  %>
                </h3>
              </div>
            <div class="panel-body">
                 <%= post.content %>
            </div>
        </div>
        <% end %>
    </div>
</div>